{
  "compilerOptions": {
    "target": "ES2022",                                  
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                    
    "module": "nodenext",                                
    "baseUrl": "./",
    "declaration": true,                              
    "sourceMap": true,                                
    "outDir": "./dist",                                  
    "importHelpers": false,                            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "strictPropertyInitialization": true,             
    "skipLibCheck": true                               
  },
  "include": [
    "src/**/*",
  ]
}