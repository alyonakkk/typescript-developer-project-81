{
  "compilerOptions": {
    "target": "ES2022",                                  
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,
    "moduleResolution": "bundler",                            
    "baseUrl": "./",
    "declaration": true,                              
    "sourceMap": true,                                
    "outDir": "./dist",                                  
    "importHelpers": false,                            
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "strictPropertyInitialization": true,             
    "skipLibCheck": true                               
  },
  "include": [
    "src/**/*",
    "vitest.config.ts"
  ]
}